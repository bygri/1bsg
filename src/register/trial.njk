      {% for section in sections %}
        <li class="relative flex items-center gap-x-6 p-4 border border-stone-200 dark:border-stone-700 rounded-lg hover:bg-stone-100 dark:hover:bg-stone-800">
          <div class="shrink-0 h-16">
            <img class="block mx-auto h-full" src="{{ section.small_img }}">
          </div>
          <div class="flex-grow">
            <a href="{{ section.trial_url }}">
              <span class="absolute inset-x-0 -top-px bottom-0"></span>
              <h3 class="text-xl font-bold text-scarf-red">{{ section.name }}</h3>
            </a>
            <p>{{ section.ages }}</p>
            <p>{{ section.day }}</p>
            <p>{{ section.time }}</p>
          </div>
          <div class="shrink-0">
            <svg class="size-6 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
