<section class="bg-stone-100 dark:bg-stone-800 py-24">
  <div class="container mx-auto px-4 sm:px-12">
    <div class="mx-auto prose md:prose-lg prose-stone dark:prose-invert max-w-3xl
                prose-headings:font-black prose-headings:tracking-tight prose-strong:font-bold
                prose-a:font-bold prose-a:text-scarf-blue prose-a:hover:text-scarf-red dark:prose-a:text-scarf-blue-light prose-a:underline">
