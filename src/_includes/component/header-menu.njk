<header class="sticky -top-6">
  <svg class="block w-full h-10 bg-scarf-blue text-scarf-red stroke-scarf-red dark:bg-scarf-blue-dark dark:text-scarf-red-dark dark:stroke-scarf-red-dark">
    <defs>
      <pattern id="stripe" width="50" height="10" patternTransform="rotate(45 0 0)" patternUnits="userSpaceOnUse">
        <line x1="0" y1="0" x2="0" y2="10" style="stroke-width:40" />
      </pattern>
    </defs>
    <rect x="0" y="0" width="100%" height="100%" fill="url(#stripe)"/>
  </svg>

  <nav class="relative flex justify-end md:justify-center space-x-10 py-3 bg-white dark:bg-black border-b dark:border-stone-700" x-data="{open: false}">
    {% for item in menu_items %}
    <a class="hidden md:block px-4 py-2 text-lg font-medium text-stone-500 hover:text-scarf-red hover:bg-stone-100 dark:hover:bg-stone-800 rounded-md" href="{{ item.href }}" {% if item.external %}target="_blank"{% endif %}>{{ item.title }}</a>
    {% endfor %}

    <div class="md:hidden">
      <button type="button" @click="open = true" class="p-2 space-x-2 inline-flex items-center justify-center text-lg font-medium text-stone-400 hover:text-scarf-red hover:bg-stone-100 dark:hover:bg-stone-800 rounded-md">
        <div>Menu</div>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <div x-show="open" class="absolute top-0 inset-x-0 p-2 md:hidden">
      <div class="rounded-lg shadow-lg bg-white dark:bg-stone-900 pt-5 pb-6 px-5">
        <div class="flex justify-end">
          <div class="-mr-2">
            <button type="button" @click="open = false" class="bg-white dark:bg-stone-800 p-2 inline-flex items-center justify-center text-stone-400 hover:text-scarf-red hover:bg-stone-100 dark:hover:bg-stone-800 rounded-md">
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <nav>
          {% for item in menu_items %}
          <a class="block px-4 py-2 text-lg font-medium text-stone-400 hover:text-scarf-red hover:bg-stone-100 dark:hover:bg-stone-800 rounded-md" href="{{ item.href }}" @click="open = false">{{ item.title }}</a>
          {% endfor %}
        </nav>
      </div>
    </div>
  </nav>
</header>
